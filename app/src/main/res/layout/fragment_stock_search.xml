<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <SearchView
        android:id="@+id/stockSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></SearchView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stockSearch"
        >


        <Button
            android:id="@+id/show_interest"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="관심종목" />

        <Button
            android:id="@+id/show_volume"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="거래량 top 100" />

        <Button
            android:id="@+id/show_RiseAndFall"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="상승/하락top10" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="549dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintStart_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="☆"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="133dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="종목명"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="148dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="현재가"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="91dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="전일대비"
                android:textSize="18dp" />

        </TableRow>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="492dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tableLayout"></LinearLayout>
    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>